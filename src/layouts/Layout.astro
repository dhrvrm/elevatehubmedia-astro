---
//Components
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

//Library or Package
// import { ViewTransitions } from 'astro:transitions';

//Styles SCSS
import "../styles/base.scss";
import "../styles/styles.scss";

//Props Handling
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
	<meta name="generator" content={Astro.generator} />
    <title>{title}</title>

	<!-- <ViewTransitions /> -->

    <!-- Primary Meta Tags -->
    <title>{title}</title>
    <meta name="title" content={title} />
    <meta
      name="description"
      content="Dive into ElevateHubMedia's portfolio: captivating animations that transform ideas into engaging visual stories."
    />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://elevatehubmedia.com/" />
    <meta property="og:title" content={title} />
    <meta
      property="og:description"
      content="Dive into ElevateHubMedia's portfolio: captivating animations that transform ideas into engaging visual stories."
    />
    <meta property="og:image" content="/social-banner.png" />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content="https://elevatehubmedia.com/" />
    <meta property="twitter:title" content={title} />
    <meta
      property="twitter:description"
      content="Dive into ElevateHubMedia's portfolio: captivating animations that transform ideas into engaging visual stories."
    />
    <meta property="twitter:image" content="/social-banner.png" />


	<script src="/scripts/vendor/typed.js" defer></script>
	<script src="/scripts/script.js" defer></script>
  </head>
  <body>
	<Header/>
    <slot />
	<Footer/>

	
  </body>
</html>
